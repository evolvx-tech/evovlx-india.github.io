<style>
  .footer-content {
    position: relative;
    width: 100%;
    height: 100%;
    background-size: 100%;
    background-repeat: no-repeat;
    background-image: linear-gradient(to right, #f0f0f0f2 50% 100%),
      url(/src/assets/hero.jpeg);
    filter: alpha(opacity = 50);
    color: #3b3b3b;
    z-index: 1;
    margin-top: 50px;
    padding: 60px;
  }

  .footer-content .logo {
    height: 100px;
    width: auto;
    margin-bottom: 20px;
  }

  @media (max-width: 768px) {
    .footer-content {
      padding: 16px;
      background-size: cover;
    }
    .footer-content .logo {
      height: 80px;
    }
  }
</style>

<style>
  @media screen and (max-width: 800px) {
    #whyus {
      display: block;
    }
  }
  @media screen and (min-width: 800px) {
    #whyus {
      display: flex;
    }
  }

  .whyus {
    border-radius: 50%;
    border-bottom: inherit;
  }

  .whyus:hover {
    border-radius: 50%;

    /* border-image: linear-gradient(transparent  10% 10%) 4; */
    /* #000 50%,transparent 0 50% */
  }

  .whyus-card .img img {
    transition: all 1s ease;
    transform: rotateY(0);
  }

  .whyus-card:hover .img img {
    transform: rotateY(360deg);
  }
</style>
